#header
  position fixed
  background-color #8a92b2
  width 100%
  height 90px
  z-index 5
  box-shadow: 0px 3px 20px 0px rgba(83,92,127,1);
  .header-logo
    position relative
    background-color #535c7f
  .title
    text-transform uppercase
    font-family 'Roboto', sans-serif
    font-size 18px
    font-weight bold
  .menu
    padding-right 15px

@media only screen and (min-width: 0)
  #header
    top 0
    height 90px
    .menu
      background-color #ececec
      height 100%
    .title-logo
      width 100%
      height 90px
      background-color #535c7f
      .header-logo
        width 80px
        height 90px
        padding-left 20px
        padding-top 15px
      .title
        display block
        
        color white
        height 90px
        width 100%
        padding-left 0
        padding-top 17px

@media only screen and (min-width: 550px)
  #header
    top 0
    height 90px
    .menu
      background-color #ececec
      margin-top 0
      height 90px
    .title-logo
      position fixed
      width auto
      top 0
      .header-logo
        width 80px
        height 90px
        padding-left 20px
        padding-top 15px
      .title
        display block
        background-color #535c7f
        color white
        height 90px
        width 120px
        padding-left 0
        padding-top 17px
@media only screen and (min-width: 48em)
  #header
    top 0
    height 90px
    .menu
      background-color #ececec
      margin-top 0
      height 90px
    .title-logo
      background-color transparent
      .header-logo
        width 90px
        height 90px
        padding-left 25px
        padding-top 15px
      .title
        background-color transparent
        width 200px
        color #405064
        padding-left 15px
        padding-top 30px