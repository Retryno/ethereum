#menu
  z-index -5
  a
    display inline-block
    text-decoration none
  .menu-item
    font-size 16px
    cursor pointer
    .dot
      background-color #405064
      height 5px
      width 5px
      border-radius 50%
      margin 0 10px 3px 10px
    .text
      text-transform uppercase
      font-weight: 600
      color #405064
      font-family: 'Roboto', sans-serif 
      .anticon
        padding-right 5px
@media only screen and (min-width: 0)
  #menu
    box-shadow inset 2px 2px 20px 0px rgba(83,92,127,1), 0px 2px 20px 0px rgba(83,92,127,1)
    .folding-menu
      padding 10px
      cursor pointer
      text-align center
      font-weight bold
      color #405064
      font-size 20px
      .anticon
        padding-left 5px
    .menu-unfold
      display none
    .menu-item
      padding-bottom 10px
      text-align center
      display block
      height 100%
      .dot
        display none
@media only screen and (min-width: 550px)
  #menu
    box-shadow none
    float right
    .folding-menu
      display none
    .menu-item
      display inline-block
      .dot
        display inline-block
    .menu-unfold
      display block
