#menu
  z-index -5
  a
    display inline-block
    text-decoration none
  .menu-item
    font-size 14px
    cursor pointer
    .dot
      background-color #405064
      height 5px
      width 5px
      border-radius 50%
      margin 0 3px 3px 7px
    .text
      text-transform uppercase
      font-weight: 600
      color #405064
      font-family: 'Roboto', sans-serif 
      .anticon
        padding-right 5px
@media only screen and (min-width: 0)
  #menu
    box-shadow inset 2px 2px 20px 0px rgba(83,92,127,1), 0px 2px 20px 0px rgba(83,92,127,1)
    .menu-fold
      position absolute
      top 20px
      right 15px

      img
        cursor pointer
        height 20px
    .menu-unfold
      display none
    .all-menu-items
      padding 5px 0
      .menu-item
        padding 3px
        text-align center
        display block
        height 100%
        .dot
          display none
@media only screen and (min-width: 550px)
  #menu
    box-shadow none
    float right
    .menu-fold
      display none
    .all-menu-items
      .menu-item
        display inline-block
        .dot
          display inline-block
    .menu-unfold
      display block
