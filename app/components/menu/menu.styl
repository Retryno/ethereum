#menu
  position fixed
  background-color: #232a40
  z-index 10
  a
    text-decoration none
  .menu-item
    font-size 20px
    text-align center
    .text
      text-transform: uppercase
      font-size: 12px
      font-weight: 600
      color: #747c99
      font-family: 'Roboto', sans-serif
    img
      width: 35px
  .menu-item-active
    background-color #8a92b2
    .text
      color: white
    img
      width: 35px
@media only screen and (min-width: 0)
  #menu
    display: flex
    top 70px
    height: 70px
    width: 100%
    .menu-item
      padding-top: 8px
      height 100%
      width: 70px
@media only screen and (min-width: 364px)
  #menu
    display: flex
    top 90px
    height: 90px
    width: 100%
    .menu-item
      padding-top: 15px
      height 100%
      width: 90px
@media only screen and (min-width: 48em)
  #menu
    display inline-block
    top 90px
    width 90px
    height 100%
    .menu-item
      padding-top: 15px
      width 100%
      height 90px