.share-icons
  position: relative
  .icon-default
      width 40px
      height 40px
      margin 5px
      border none
      border-radius 50%
      box-shadow 0 8px 18px -3px rgba(0,0,0,0.35)
      .fa
        color white
        font-size 16px
        position: absolute;
        top: 50%;
        margin-top: -8px;
        left: 0;
        right: 0;
  .icon-share 
    z-index: 100

  .icon-share.light-shadow
    box-shadow 1px 2px 4px 0 rgba(0, 0, 0, 0.1)

  .ant-btn.icon-facebook
    background-color #3b5998
    z-index 100
    &:active
    &:focus
    &:active:focus
      background-color #3b5998

  .ant-btn.icon-twitter
    background-color #00aced
    z-index 100
    &:active:focus
      background-color #00aced

  .ant-btn.icon-google-plus
    background-color #dd4b39
    z-index 100
    &:active:focus
      background-color: #dd4b39