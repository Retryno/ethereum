.single-domain
  padding 30px
  font-size 14px
  color #555
  > div
    padding-top 10px
  .domain
    &-logo
      width 100px
      display block
      margin 0 auto
    &-name
      text-align center
      color #4876a9
      font-size 20px
    &-share-icons
      padding-top 10px
      text-align center
    &-wallet
      word-break break-all
    &-categories
      b
        margin-right 8px
      .ant-tag
        background-color rgba(237, 237, 237, 0.6)
        margin-bottom 8px
    &-buy
      text-align center
      .ant-btn
        font-size 16px
        padding 7px
        border-radius 20px
        height auto
        width 150px
        background-color #535c7f
        color white
        box-shadow inset 0px 0px 15px 1px rgba(255,255,255,0.3)
        &:active
        &:hover
        &:focus
          border-color #d9d9d9