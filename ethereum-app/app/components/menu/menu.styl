#menu
  z-index -5
  a
    display inline-block
    text-decoration none
  .menu      
    &-item
      cursor pointer
      .dot
        background-color #405064
        height 5px
        width 5px
        border-radius 50%
        margin 0 3px 3px 7px
      .text
        text-transform uppercase
        font-weight 600
        color #405064
        font-family: 'Roboto', sans-serif
        .anticon
          padding-right 5px
  .header-share-icons
    text-align center
    padding-bottom 5px
@media only screen and (min-width: 0)
  #menu
    .menu
      &-fold
        position absolute
        top 20px
        right 15px
        img
          cursor pointer
          height 20px
      &-unfold
        display none
    .all-menu-items
      padding-top 5px
      .menu
        &-item
          font-size 14px
          padding 3px
          text-align center
          display block
          height 100%
          .dot
            display none
@media only screen and (min-width: 48em)
  #menu
    .menu-fold
      display none
    .all-menu-items
      padding-right 10px
      .menu
        &-item
          font-size 16px
          display inline-block
          .dot
            display inline-block
    .menu-unfold
      display block