#menu
  z-index -5
  a
    display inline-block
    text-decoration none
  .menu
    &-share
      font-size 20px
    &-item
      cursor pointer
      .dot
        background-color #405064
        height 5px
        width 5px
        border-radius 50%
        margin 0 3px 3px 7px
      .text
        text-transform uppercase
        font-weight 600
        color #405064
        font-family: 'Roboto', sans-serif
        .anticon
          padding-right 5px
      .share-icons
        position absolute
@media only screen and (min-width: 0)
  #menu
    box-shadow inset 2px 2px 20px 0px rgba(83,92,127,0.5), 0px 2px 20px 0px rgba(83,92,127,0.8)
    .menu-fold
      position absolute
      top 20px
      right 15px
      img
        cursor pointer
        height 20px
    .menu-unfold
      display none
    .all-menu-items
      padding 5px 0
      .menu
        &-share
          display none
        &-item
          font-size 14px
          padding 3px
          text-align center
          display block
          height 100%
          .dot
            display none
      .share-icons
        display block
        text-align center
      .menu-share-icons
        .icon-default
          background-color transparent
          box-shadow none
          width auto
          height 30px
          .fa
            font-size 20px
          .fa-facebook
            color #3b5998
          .fa-twitter
            color #00aced
          .fa-google-plus
            color #dd4b39
@media only screen and (min-width: 48em)
  #menu
    box-shadow none
    float right
    .menu-fold
      display none
    .all-menu-items
      padding-right 10px
      .menu
        &-share
          display inline-block
        &-item
          font-size 16px
          display inline-block
          .dot
            display inline-block
      .share-icons
        position absolute
        text-align right
        top 8px
        right 45px
        background-color #ececec
        width 40%
    .menu-unfold
      display block
    