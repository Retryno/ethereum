#header
  top 0
  position fixed
  background-color white
  width 100%
  height 60px
  z-index 5
  .search-domains
    position absolute
    text-align center
  .title-logo
    height 60px
    .header-logo
      width 45px
      height 60px
      position relative
      img
        height 40px
    .title
      text-transform uppercase
      font-family 'Roboto', sans-serif
      font-size 18px
      font-weight bold
      padding-left 15px
@media only screen and (min-width: 0)
  #header
    .search-domains
      top 0px
      right 35px
      left 140px
    .main-menu
      background-color white
      height 100%
    .header
      &-share
        display none
    .title-logo
      width 100%
      .header-logo
        padding-left 15px
        padding-top 10px
      .title
        display block
        color #535c7f
        width 115px
        padding-top 5px
@media only screen and (min-width: 550px)
  #header
    .main-menu
      margin-top 60px
    .search-domains
      left 200px
    .title-logo
      position fixed
      width auto
      top 0
      .title
        color #535c7f
        width 200px
        padding-top 18px
@media only screen and (min-width: 48em)
  #header
    .search-domains
      right 200px
      left 200px
    .main-menu
      padding-top 14px
      padding-right 0
      margin-top 0
      height 60px
    .header
      &-menu
        display none
      &-share-icons
        display inline-block
        margin-right 15px
        float right
    .title-logo
      .title
        width 200px
        color #405064
        padding-top 18px