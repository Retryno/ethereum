#header
  top 0
  height 60px
  position fixed
  background-color #8a92b2
  width 100%
  height 60px
  z-index 5
  box-shadow 0px 2px 20px 0px rgba(83,92,127,0.8)
  .search-domains
    position absolute
    text-align center
    input
      width 100%
  .title-logo
    height 60px
    .header-logo
      width 60px
      height 60px
      position relative
      background-color #535c7f
      img
        width 35px
    .title
      text-transform uppercase
      font-family 'Roboto', sans-serif
      font-size 18px
      font-weight bold

@media only screen and (min-width: 0)
  #header
    .search-domains
      top 0px
      right 35px
      left 140px
    .main-menu
      background-color #ececec
      height 100%
    .title-logo
      width 100%
      background-color #535c7f
      .header-logo
        padding-left 15px
        padding-top 10px
      .title
        display block
        color white
        width 100%
        padding-left 0
        padding-top 5px

@media only screen and (min-width: 550px)
  #header
    background-color #535c7f
    .main-menu
      margin-top 60px
    .search-domains
      left 220px
    .title-logo
      position fixed
      width auto
      top 0
      .title
        color white
        width 200px
        padding-top 18px
@media only screen and (min-width: 48em)
  #header
    .search-domains
      right 350px
      left 250px
    .main-menu
      padding-top 11px
      padding-right 0
      background-color #ececec
      margin-top 0
      height 60px
    .title-logo
      background-color transparent
      .title
        background-color transparent
        width 200px
        color #405064
        padding-left 15px
        padding-top 18px