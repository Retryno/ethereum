#footer
  display flex
  position relative
  background-color #ececec
  width 100%
  height 60px
  z-index 0
  .footer
    &-menu
      display flex
      flex auto
      justify-content center
      align-items center

@media only screen and (min-width 0)
  #footer
    display none
@media only screen and (min-width 48em)
  #footer
    display flex