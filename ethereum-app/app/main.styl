body
  width 100%
  overflow hidden
  margin 0
  font-family 'Roboto', sans-serif
  font-size 14px
  line-height 1.42857143
  color #333
  background-color #8a92b2
  #root
    height 100%
    overflow-y auto
h1
  margin 0
.ant-modal-mask
  background-color: rgba(83, 92, 127, 0.8) !important
.ant-modal-header
  padding 15px
  .ant-modal-title
    text-transform uppercase
    font-size 18px
    color #444
.sell-modal, .buy-modal, .contact-modal
  .ant-modal-body
    padding 0
    background-color #ededed
  .ant-modal-footer
    padding 15px
    cursor pointer
    font-size 18px
    text-align center
    color white
    background-color #535c7f
    text-transform uppercase
